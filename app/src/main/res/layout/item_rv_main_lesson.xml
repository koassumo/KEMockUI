<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card2"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="@dimen/margin_small_cardview"
    app:cardBackgroundColor="?attr/colorPrimaryVariant"
    app:cardCornerRadius="@dimen/corner_radius_big_cardview"
    app:cardElevation="@dimen/elevation_cardview"
    app:strokeWidth="@dimen/stroke_cardview"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginTop="8dp"
                android:layout_margin="@dimen/step_normal"
                android:gravity="center"
                android:src="@drawable/ic_avatar"
                />

            <TextView
                android:id="@+id/title_classes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_marginTop="8dp"
                android:layout_margin="@dimen/step_normal"
                android:gravity="center"
                android:text="@string/description"
                android:textSize="@dimen/size_title_normal"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/online"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/online_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rotation="90"
                    android:gravity="center"
                    android:layout_margin="-20dp"
                    android:padding="-20dp"
                    android:text="@string/offline"
                    android:textSize="@dimen/size_title_normal"
                    android:textStyle="bold"
                    />
            </FrameLayout>
        </LinearLayout>

</com.google.android.material.card.MaterialCardView>